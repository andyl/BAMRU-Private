#!/usr/bin/env ruby

msg = "Usage: upload <environment>  (valkyrie|staging|'production')"
abort msg unless ARGV.length == 1

db_dir = File.dirname(__FILE__)

require File.expand_path("../lib/env_settings", db_dir)

target = ARGV[0]

system "cd #{db_dir} && valkyrie sqlite://development.sqlite3 postgres://bnet:#{POSTGRES_PASS}@#{target}/bnet_production"
