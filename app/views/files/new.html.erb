<%= javascript_include_tag "files/all_new_files" %>

<div id=x_container>
  <div id=x_body>
    <div id=x_header>
      <table width=100%>
        <tr>
          <td width=250 align=left>
            <b>Upload File</b>
          </td>
          <td align=right>
            <%= link_to("BAMRU Files", files_path) %>
          </td>
        </tr>
      </table>
    </div>

    <div id=x_single_col>

      <%= simple_form_for @file, :url => files_path do |f|   %>
        <%= f.input  :data, :label => "File", :hint => "Valid file types: #{@file.valid_filetypes}"   %>
        <%= f.button :submit                   %>
      <% end %>

    </div>
    <div id=x_footer> </div>

  </div>
</div>