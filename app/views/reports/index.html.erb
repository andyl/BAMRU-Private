<%= javascript_include_tag "jquery.tablesorter.min.js" %>
<%= javascript_include_tag "members.js" %>
<%= javascript_include_tag "reports_table.js" %>

<div id=x_container>
  <div id=x_body>
    <div id=x_header>
      <table width=100%>
        <tr>
          <td align=center><b>BAMRU Database Reports</b></td>
        </tr>
      </table>
    </div>
    <div id=x_single_col>

      <table id="myTable" class="tablesorter">
        <thead>
        <tr>
          <th>Name</th>
          <th>Format</th>
          <th>Description</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
          <% @report_list.each do |report| %>
            <tr>
              <td><%= report[0] %></td>
              <td><%= report_format(report) %></td>
              <td><%= report_description(report) %></td>
              <td><%= download_link(report)%>
                  <% unless %w(PDF JSON).include?(report_format(report)) %> |
                  <%= gdocs_link(report) %> <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
    <div id=x_footer> </div>
  </div>
</div>
