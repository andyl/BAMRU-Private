<!DOCTYPE html>
<html manifest="/mobile2f.manifest">
<head>
  <title>BAMRU Mobile 2</title>
  <link href='<%= raw favicon_file %>' rel='shortcut icon' type='image/vnd.microsoft.icon'/>
  <link rel="stylesheet" href="/stylesheets/jquery.mobile-1.0rc1.css" />
  <script>
    window.myid = "<%= current_member.id %>";
  </script>
  <%= javascript_include_tag "mobile2/all_mobile2" %>
  <meta name="viewport" content="width=device-width,minimum-scale=1,maximum-scale=1">

  <%= csrf_meta_tag %>
</head>
<body>

<script>
  window.members  = new M2_Members(<%= raw @mem_json    %>)
  window.messages = new M2_Messages(<%= raw @msg_json %>)
  window.is_phone = "<%= @is_phone ? 'true' : 'false' %>"
</script>

<%= page_start "home" %>
<div data-role="listview" data-inset="true" data-theme="c">
  <li><%= link_to "Roster",           "#roster"      , {'class' => 'home_nav'} %></li>
  <li><%= link_to "DO: #{@do_name}",  "#member"      , {'class' => 'mem_home', 'data-memid' => "#{@do_id}" } %></li>
  <li><%= link_to "Status Line",      "#status"      , {'class' => 'home_nav'} %></li>
  <li><%= link_to "Send Page",        "#send-page"   , {'class' => 'home_nav'} %></li>
  <li><%= link_to "Unit Message Log", "#message-log" , {'class' => 'home_nav'} %></li>
  <li><%= link_to "My Inbox",         "#inbox"       , {'class' => 'home_nav'} %></li>
  <div style='text-align: center;'>
    <span id=state></span>
  </div>
</div>
<%= page_end %>

<%= page_start "roster", "Roster" %>
<div id='roster_view' data-role="listview" data-inset="true" data-theme="c" data-filter="true" data-filter-placeholder="Find member...">
  <li>Hello World</li>
</div>
<%= page_end %>

<%= page_start "member", "Member Detail" %>
<div id="member_show">
  <a href="#roster" data-role='button'>Select a member...</a>
</div>
<%= page_end %>

<%= page_start "status", "Status Line" %>
<div id='stat_div' style='text-align: center;'>
  BAMRU Status Line
  <p></p>
  <b>650-858-4618</b>
  <p></p>
  <% if @is_phone %>
    <a href='tel:650-858-4618' data-role='button' data-ajax="false">Dial</a>
  <% end %>
</div>
<%= page_end %>

<%= page_start "send-page", "Send Page" %>
SEND PAGE (Under Construction)
<%= page_end %>

<%= page_start "message-log", "Message Log" %>
<div id='message_index' data-role="listview" data-inset="true" data-theme="c" data-filter="true" data-filter-placeholder="Find message...">
  <li>Hello World</li>
</div>
<%= page_end %>

<%= page_start "message", "Message Detail" %>
<div id='message_show'>
  <a href="#message-log" data-role='button'>Select a message...</a>
</div>
<%= page_end %>

<%= page_start "inbox", "Inbox" %>
<div id="distribution_index">
  MY INBOX (Under Construction)
</div>
<%= page_end %>


</body>
</html>
