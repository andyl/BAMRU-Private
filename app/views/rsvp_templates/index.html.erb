<h2>RSVP Templates</h2>

<%= link_to "Create New Template", new_rsvp_template_path %>
<p></p>

<table>
  <thead>
  <th>Name</th>
  <th>Caption</th>
  <th>Yes Prompt</th>
  <th>No Prompt</th>
  <th>Maybe Prompt</th>
  <th>Action</th>

  </thead>
  <% @templates.each do |t| %>
    <tr>
      <td><%= t.name %></td>
      <td><%= t.caption %></td>
      <td><%= t.yes_prompt %></td>
      <td><%= t.no_prompt %></td>
      <td><%= t.maybe_prompt %></td>
      <td>
        <%= link_to "EDIT", edit_rsvp_template_path(t) %> |
        <%= link_to "DELETE", rsvp_template_path(t), :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>