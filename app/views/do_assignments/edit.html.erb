<%= javascript_include_tag "do_assignments.js"   %>

<div id=x_container>
  <div id=x_body>
    <div id=x_header>
      <table width=100%>
        <tr>
          <td align=left><b>Unit Duty Officers</b></td>
          <td align=right>
            <%= link_to("DO Schedule", do_assignments_path(@quarter)) %>
          </td>
        </tr>
      </table>
    </div>
    <div id=x_single_col class=centered>
      <%= @quarter[:year] %> / Q<%= @quarter[:quarter] %> <p/>

      <%= edit_link_prev(@quarter) %> <%= edit_link_current_quarter %> <%= edit_link_next(@quarter) %><p/>

      <%= form_for @org, :method => :post, :url => do_assignments_path do |org| %>
        <table align=center border=1>
          <tr><th>Year</th><th>Quarter</th><th>Week</th><th>Start - End</th><th>Primary DO</th><th>Backup DO</th></tr>
          <% @org.do_assignments_for(@quarter[:year], @quarter[:quarter]).each do |ado| %>
            <%= org.fields_for :do_assignments, ado do |ido| %>
              <%= ido.hidden_field :year, :value => ado.year %>
              <%= ido.hidden_field :quarter, :value => ado.quarter %>
              <%= ido.hidden_field :week, :value => ado.week %>
              <% if ado.current? %>
                <tr style="background-color: #ccffcc;">
              <% else %>
                <tr>
              <% end %>
              <td><%= @quarter[:year] %></td><td><%= @quarter[:quarter] %></td>
              <td><%= ado.week%></td>
              <td><%= ado.start_day %> - <%= ado.end_day %></td>
              <td>
                <%= ido.select(:name, [ado.name] + ado.avail_members, {:include_blank => true}) %>
              </td>
              <td>
                <% if ado.current? %>
                  <%= ido.select(:backup_id, ado.backup_hash, {:include_blank => true}) %>
                <% end %>
              </td>
              </tr>
            <% end %>
          <% end %>
        </table>
        <p/>
        <%= org.submit "Update" %>
      <% end %>

    </div>
    <div id=x_footer>
      <%= link_to "DO Staffing History", "/do_handoffs"  %>
    </div>
  </div>
</div>

<div id="blanket"></div>
<div id="do_popup">
  Current DO: ______________<br/>
  New DO: __________________<p></p>
  DO Handoff requires:<br/>
  <li>updating the county status line</li>
  <li>updating the BAMRU status line</li>
  <li>send a to announce the shift change to the unit</li>
  To: From: <p></p>
  checkbox<p></p>
  [cancel] [send page and change do]
</div>

