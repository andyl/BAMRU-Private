<%= javascript_include_tag "jquery.tablesorter2.js"        %>
<%= javascript_include_tag "jquery.tablesorter_filter.js"  %>
<%= javascript_include_tag "members.js"                    %>
<%= javascript_include_tag "unit_certs_table.js"           %>

<div id=x_container>
  <div id=x_wide_body>
    <div id=x_header>
      <table width=100%>
        <tr>
          <td align=left><b>Team Certs</b></td>
          <td align=center>
            Search: <input name="filter" id="filter-box" value="" maxlength="15" size="15" type="text">
            <input id="filter-clear-button" type="submit" value="Clear"/>
          </td>
          <td align=right>
            <%= link_to("Edit My Certs", member_certs_path(current_member)) %>
          </td>
        </tr>
      </table>
    </div>
    <div id=x_single_col>

      <% cache('unit_certs_table') do %>
        <table id="myTable" class="tablesorter">
          <thead>
          <tr>
            <th>Role</th>
            <th>Name</th>
            <th>Med.&nbsp;&nbsp;</th>
            <th>CPR&nbsp;&nbsp;</th>
            <th>HAM</th>
            <th>Tracking&nbsp;&nbsp;</th>
            <th>Avy&nbsp;&nbsp;</th>
            <th>Rigging&nbsp;&nbsp;</th>
            <th>ICS&nbsp;&nbsp;</th>
            <th>Search<br/>Mgmt.&nbsp;&nbsp;</th>
            <th>SO<br/>Driver&nbsp;&nbsp;</th>
            <th>SO<br/>Bkgrnd&nbsp;&nbsp;</th>
          </tr>
          </thead>
          <tbody>
          <% @members.each do |mem| %>
            <tr>
              <td><%=mem.typ%></td>
              <td class=link><%= color_name(mem) %>
                <%= raw display_table_cert(mem, "medical")    %>
                <%= raw display_table_cert(mem, "cpr")        %>
                <%= raw display_table_cert(mem, "ham")        %>
                <%= raw display_table_cert(mem, "tracking")   %>
                <%= raw display_table_cert(mem, "avalanche")  %>
                <%= raw display_table_cert(mem, "rigging")    %>
                <%= raw display_table_cert(mem, "ics")        %>
                <%= raw display_table_cert(mem, "overhead")   %>
                <%= raw display_table_cert(mem, "driver")     %>
                <%= raw display_table_cert(mem, "background") %>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>

    </div>
    <div id=x_footer>
      <table width=100%>
        <tr>
          <td align=left style="font-size: 10px;">
            BACKGROUND COLOR: Green = certification is current; Yellow = expires within 1 month; Orange = expires within 3 months; Pink = expired<br/>
            TEXT COLOR: Blue = link to documentation; Purple = link to comment; Red member name = missing current Medical and/or CPR.
          </td>
          <td align=right style="font-size: 10px;">
            <%= link_to("Expired Certs", "#{reports_path}/BAMRU-CertExpiration.pdf", :target => "_blank") %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
