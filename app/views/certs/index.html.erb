<%= javascript_tag "var autoselectMemberNames = [#{Member.autoselect_member_names('/certs')}];" %>
<%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};"  %>
<%= javascript_tag "var MEMBER_ID = #{@member.id};"    %>

<%= javascript_include_tag "certs/all_certs_indx" %>

<%= csrf_meta_tag %>

<div id=x_container>
  <div id=x_body>
    <div id=x_header>
      <table width=100%>
        <tr>
          <td width=250 align=left>
            Member Certs: <b><%= link_to(@member.full_name, member_path(@member)) %></b>
          </td>
          <td align=center>
            <%= link_to("Unit Certs", unit_certs_path) %>
          </td>
          <td width=250 align=right>
            <%= link_to('<', member_certs_path(@member.prev_member_id)) %>
            <input size=14 id="autoselect" value="find member...">
            <%= link_to('>', member_certs_path(@member.next_member_id)) %>
          </td>
        </tr>
      </table>
    </div>

    <div id=x_single_col>
      <%= raw std_cert_category("Medical Certs",       @member, :medical)    %>
      <%= raw std_cert_category("CPR Certs",           @member, :cpr)        %>
      <%= raw std_cert_category("Ham Certs",           @member, :ham)        %>
      <%= raw std_cert_category("Tracking Certs",      @member, :tracking)   %>
      <%= raw std_cert_category("Avalanche Certs",     @member, :avalanche)  %>
      <%= raw std_cert_category("Rigging Certs",       @member, :rigging)    %>
      <%= raw std_cert_category("ICS Certs",           @member, :ics)        %>
      <%= raw std_cert_category("Search Mgmt. Certs",  @member, :overhead)   %>
      <%= raw std_cert_category("SO Driver Certs",     @member, :driver)     %>
      <%= raw adm_cert_category("SO Background Certs", @member, :background) %>

    </div>
    <div id=x_footer style='font-size: 8pt;'>
      <span style="background-color: lightgreen;">Green</span>: current cert; <span style="background-color: yellow;">Yellow</span>: expires within 3 months; <span style="background-color: orange;">Orange</span>: expires within 1 month; <span style="background-color: pink;">Pink</span>: expired
    </div>

  </div>
</div>