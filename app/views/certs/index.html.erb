<script>var autoselectMemberNames = [ <%= Member.autoselect_member_names('/certs') %> ];</script>
<script>var autoselectMemberNames = [ <%= Member.autoselect_member_names('/certs') %> ];</script>

<%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};"  %>
<%= javascript_tag "var MEMBER_ID = #{@member.id};"    %>
<%= javascript_include_tag "jquery.tablesorter.min.js" %>
<%= javascript_include_tag "jquery-ui.min.js"          %>
<%= javascript_include_tag "certs_table.js"            %>
<%= javascript_include_tag "certs_sort.js"             %>
<%= javascript_include_tag "jquery-ui.min.js"          %>
<%= javascript_include_tag "members_autoselect.js"     %>
<%= csrf_meta_tag %>

<style>
  #sortable {list-style-type: none; margin: 0; padding: 0;}
  li {
    list-style-type: none;
    border-top: white;
    border-left: white;
    border-right: white;
    border-bottom: lightgray;
    border-style: solid;
    border-width:  1px;
  }
  .handle {margin-right: 5px;}
  .cert_header {
    background-color: #eeeeee;
  }
  .cert_divider {
    height: 15px;
  }
</style>

<div id=x_container>
  <div id=x_body>
    <div id=x_header>
      <table width=100%>
        <tr>
          <td width=250 align=left>
            Member Certs: <b><%= link_to(@member.full_name, member_path(@member)) %></b>
          </td>
          <td align=center>
            <%= link_to("Unit Certs", unit_certs_path) %>
          </td>
          <td width=250 align=right>
            <%= link_to('<', member_certs_path(@member.prev_member_id)) %>
            <input size=14 id="autoselect" value="find member...">
            <%= link_to('>', member_certs_path(@member.next_member_id)) %>
          </td>
        </tr>
      </table>
    </div>

    <div id=x_single_col>
      <%= raw cert_category("Medical Certs",       @member, :medical)    %>
      <%= raw cert_category("CPR Certs",           @member, :cpr)        %>
      <%= raw cert_category("Ham Certs",           @member, :ham)        %>
      <%= raw cert_category("Tracking Certs",      @member, :tracking)   %>
      <%= raw cert_category("Avalanche Certs",     @member, :avalanche)  %>
      <%= raw cert_category("Rigging Certs",       @member, :rigging)    %>
      <%= raw cert_category("ICS Certs",           @member, :ics)        %>
      <%= raw cert_category("Search Mgmt. Certs",  @member, :overhead)   %>
      <%= raw cert_category("SO Driver Certs",     @member, :driver)     %>
      <%= raw cert_category("SO Background Certs", @member, :background) %>

    </div>
    <div id=x_footer> </div>

  </div>
</div>