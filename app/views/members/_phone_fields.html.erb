<li class=fields style="list-style-type: none; <%= check_style(@xphone) %>" id=phone_<%= f.id %>>
  <span class=sort_handle><img src="/images/handle.png" class=handle></span>
  <%= f.hidden_field :position, :size => 2 %>
  <%= f.text_field :number, :size => 10 %>
  <%= f.select :typ, f.object.typ_opts %>
  Pgr<%= f.check_box :pagable %>
  <%= link_to_remove_field("remove", f) %>
  <%= f.hidden_field :_destroy %>
</li>