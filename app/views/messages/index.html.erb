<h2>Message Log</h2>

<table border=1>
  <thead>
  <tr><th>Content</th><th>Sender</th><th>Send Time</th><th>IP Address</th></tr>
  </thead>
  <tbody>
  <% @messages.each do |m| %>
    <tr>
      <td><%= m.text %></td>
      <td><%= m.member.full_name %></td>
      <td><%= m.created_at %></td>
      <td><%= m.ip_address %></td>
    </tr>
  <% end %>
  </tbody>
</table>